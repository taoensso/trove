{:paths ["bb"]
 :tasks
 {test:bb
  {:doc "Run tests in babashka"
   :extra-paths ["src" "test"]
   :extra-deps {io.github.cognitect-labs/test-runner {:git/tag "v0.5.1" :git/sha "dfb30dd"}}
   :task (exec 'cognitect.test-runner.api/test)
   :exec-args {:patterns [".*-tests$"]}}

  test:bb-smoke-test
  {:doc "Run smoke test in babashka"
   :extra-paths ["src" "test"]
   :task (load-file "test/taoensso/trove_bb_smoke_test.bb")}

  graal-tests
  {:doc "Run Graal native-image tests"
   :requires ([graal-tests])
   :task
   (do
     (graal-tests/uberjar)
     (graal-tests/native-image)
     (graal-tests/run-tests))}}}
